# ========================================
# 文件分享平台环境配置
# ========================================

# Supabase配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# 应用基础配置
# ========================================
NEXT_PUBLIC_APP_NAME=文件分享平台
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000 

# ========================================
# 文件上传配置
# ========================================
MAX_FILE_SIZE=104857600
UPLOAD_RATE_LIMIT=10
UPLOAD_RATE_LIMIT_WINDOW=60000
MAX_FILES_PER_USER=1000
ALLOWED_FILE_TYPES=image,video,audio,document,archive,code

# ========================================
# 安全配置
# ========================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here
CSRF_SECRET=your_csrf_secret_here

# 速率限制配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# 第三方服务配置
# ========================================

# 病毒扫描服务
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# 图片处理服务
CLOUDINARY_URL=your_cloudinary_url_here
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# 邮件服务
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com

# ========================================
# 数据库配置
# ========================================
DATABASE_URL=your_database_url_here
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# ========================================
# 缓存配置
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# ========================================
# 监控和日志配置
# ========================================
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# 开发环境配置
# ========================================
NODE_ENV=development
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ========================================
# 生产环境配置
# ========================================
# NODE_ENV=production
# ENABLE_SWAGGER=false
# ENABLE_GRAPHQL_PLAYGROUND=false
# LOG_LEVEL=warn

# ========================================
# 功能开关配置
# ========================================
FEATURE_AI_CHAT=true
FEATURE_PRIVATE_MESSAGES=true
FEATURE_FILE_PREVIEW=true
FEATURE_USER_ANALYTICS=true
FEATURE_ADMIN_PANEL=true
FEATURE_MODERATION=true

# ========================================
# 广告和营销配置
# ========================================
GOOGLE_ANALYTICS_ID=your_ga_id_here
GOOGLE_TAG_MANAGER_ID=your_gtm_id_here
GOOGLE_ADSENSE_CLIENT_ID=your_adsense_client_id_here
FACEBOOK_PIXEL_ID=your_fb_pixel_id_here

# ========================================
# 支付配置（如果需要）
# ========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ========================================
# 社交媒体配置
# ========================================
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ========================================
# 备份和存储配置
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket_name
BACKUP_S3_REGION=us-east-1 